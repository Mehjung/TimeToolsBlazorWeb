@page "/counter"
@using System.Text.Json
@using System.Drawing



<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="SetI">Click me</button>
<Dbbutton Icon="Download" Variant="brand-primary" @onclick="IncrementCount">Download</Dbbutton>
<Dbcheckbox label="CHECKER" name="checkbox-name" label-hidden="true"></Dbcheckbox>
<Dbcheckbox label="Checkbox" name="checkbox-name" indeterminate="@indeterminate"></Dbcheckbox>
<Dbcheckbox label="Checkbox" name="checkbox-name" disabled></Dbcheckbox>
<Dbcheckbox label="Checkbox" name="checkbox-name"></Dbcheckbox>

<Dbinput label="Semitransparent" name="input-name"></Dbinput>


@code {
    private int currentCount = 0;
    private Color Col = Color.Red;
    private void IncrementCount()
    {
        currentCount++;
    }

    private bool indeterminate = true;
    private void SetI()
    {
        indeterminate = !indeterminate;


    }
}
